{% extends 'base.html.twig' %}

{% block title %}Réciprocité 54{% endblock %}

{% block body %}

    <article>
        <h2>{{article.title}}</h2>
        <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} a {{article.createdAt | date('H:i')}} dans la catégorie Médias</div>
        <div class="content">
            <img src="{{ asset('build/uploads/images/' ~ article.image) }}" alt="">

            <p>{{article.content | raw }}</p>
        </div>
    </article>
    <a href="{{ path('article_edit', {'id':article.id}) }}" class="btn btn-danger">modifier</a>
    <a href="{{ path('article_delete', {'id':article.id}) }}" class="btn btn-danger">supprimer</a>
{% endblock %}